{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        ".vercel/**",
        "!.vercel/cache/**",
        "tsconfig.tsbuildinfo"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ]
    },
    "build:functions": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "*.js",
        "*.d.ts",
        "tsconfig.tsbuildinfo"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "vitest.config.*",
        ".env*"
      ]
    },
    "test:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": ["eslint-report.json"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": ["eslint-report.json"]
    },
    "check-types": {
      "dependsOn": ["^build"],
      "outputs": ["tsconfig.tsbuildinfo"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json"
      ]
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "dependsOn": ["^build"],
      "outputs": ["src/schema.ts", "drizzle/**"],
      "inputs": [
        "drizzle.config.*",
        ".env*"
      ]
    },
    "db:push": {
      "dependsOn": ["db:generate"],
      "cache": false,
      "inputs": [
        "drizzle.config.*",
        "src/schema.ts",
        ".env*"
      ]
    },
    "db:migrate": {
      "dependsOn": ["^build", "db:generate"],
      "cache": false,
      "inputs": [
        "drizzle.config.*",
        "migrations/**",
        ".env*"
      ]
    },
    "db:studio": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*"
      ]
    },
    "format:check": {
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*"
      ]
    },
    "test:e2e": {
      "dependsOn": ["@foresight-cdss-next/web#build"],
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        "cypress.config.*",
        ".env*"
      ]
    }
  },
  "globalDependencies": [
    ".env*",
    "turbo.json",
    "package.json",
    "tsconfig.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "DATABASE_URL",
    "AWS_REGION",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY"
  ]
}
