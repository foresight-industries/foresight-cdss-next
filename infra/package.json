{
  "name": "@foresight-cdss-next/infra",
  "version": "1.0.0",
  "bin": "bin/infra.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdklocal": "cdklocal",
    "local:start": "localstack start -d",
    "local:stop": "localstack stop",
    "local:status": "localstack status",
    "local:logs": "localstack logs",
    "local:deploy": "dotenvx run -f ../.env.localstack.local -- cdklocal deploy",
    "local:deploy:all": "dotenvx run -f ../.env.localstack.local -- cdklocal deploy --all --require-approval never",
    "local:destroy": "dotenvx run -f ../.env.localstack.local -- cdklocal destroy",
    "local:destroy:all": "dotenvx run -f ../.env.localstack.local -- cdklocal destroy --all --force",
    "local:diff": "dotenvx run -f ../.env.localstack.local -- cdklocal diff",
    "local:synth": "dotenvx run -f ../.env.localstack.local -- cdklocal synth",
    "local:bootstrap": "dotenvx run -f ../.env.localstack.local -- cdklocal bootstrap",
    "local:list": "dotenvx run -f ../.env.localstack.local -- cdklocal list"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "*",
    "@types/aws-lambda": "^8.10.156",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@types/source-map-support": "^0",
    "aws-cdk": "2.1031.0",
    "aws-cdk-local": "^3.0.1",
    "esbuild": "*",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "*",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-amplify/data-construct": "^1.16.3",
    "@aws-amplify/graphql-api-construct": "^1.20.3",
    "@aws-sdk/client-cloudwatch": "^3.908.0",
    "@aws-sdk/client-signer": "^3.917.0",
    "aws-amplify": "*",
    "aws-cdk-lib": "^2.221.0",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  }
}
